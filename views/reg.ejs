<% include header.ejs %>
<script>
    <% if(error){ %>
    alert("<%=error%>");
    <%}%>
    <% if(success){%>
    alert("<%=success%>");
    window.location="/user/login";
    <%}%>
</script>

<form action="/user/reg" method="post">
    <fieldset>
        <div style="text-align: center;">
            <h3>员工信息注册</h3>
        </div>

        <div>
            登录账号：
            <div>
                <input type="text" name="username" placeholder="登录用户名（仅支持英文和数字组合）" >
            </div>
        </div>
        <div>
            真实姓名：
            <div>
                <input type="text" name="realname" placeholder="请输入您的中文姓名">
            </div>
        </div>
         <div class="control-group">
            密　　码：
            <div>
                <input type="password" name="password" placeholder="请输入您的登录密码">
            </div>
        </div>
        <div>
            确认密码：
            <div>
                <input type="password" name="repasswd" placeholder="请确认您的登录密码">
            </div>
        </div>
        <div>
            常用邮箱：
            <div>
                <input type="text" name="email" placeholder="example@163.com">
            </div>
        </div>
       
        <div>
           <div>
                <button>注册</button>
                <a href="/user/login" style="margin-left: 30px;">已有账号，直接登录！</a>
            </div>
        </div>
    </fieldset>
</form>
<% include footer.ejs%>